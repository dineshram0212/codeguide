{
  "manifest_version": 3,
  "name": "Code Helper Extension",
  "version": "1.0",
  "description": "Explains code using LLM models",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["styles.css"],
    "js": ["content.js"]
  }],
  "host_permissions": [
    "http://localhost:8000/*"
  ]
}